
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection:
    // - Authenticated users can read their own document.
    // - Authenticated users can create their own document (e.g., on signup).
    // - Authenticated users can update their own document.
    // - Deleting user documents from the client is disallowed.
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false; // Generally safer to handle deletions server-side or not at all from client
    }

    // TrainingPlans collection:
    // - Users can read, create, and update training plans where their userId matches.
    // - Users can delete their own training plans.
    match /trainingPlans/{planId} {
      allow read, create, update: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // DashboardCache collection:
    // - Users can read, create, and update their own dashboard cache entry.
    //   The document ID is the userId, and we also check the userId field within the document.
    // - Users can delete their own dashboard cache.
    match /dashboardCache/{userId} {
      allow read, create, update: if request.auth != null && request.auth.uid == userId && request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && request.auth.uid == userId && resource.data.userId == request.auth.uid;
    }
  }
}
